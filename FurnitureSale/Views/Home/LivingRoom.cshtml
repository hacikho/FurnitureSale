@using FurnitureSale.Models;
@model List<Product>

@{
    ViewBag.Title = "LivingRoom";
}

<h2>LivingRoom</h2>


@if (Model.Count == 0)
{
    <p>No product have been added yet</p>
}
else
{
    if (Session["UserName"] == "Admin")
    {
        <section class="products">
            @foreach (Product p in Model)
            {
                <div class="product-card">
                    <div class="product-image">
                        <a href="@Url.Action("Detail", "Products", new { id=p.Id})">
                            @if (!String.IsNullOrEmpty(p.ImageName1))
                            {
                                <img src="@Url.Content("~/images/"+p.ImageName1)" alt="@p.ImageName1" />

                            }
                            else
                            {
                                <img src="@Url.Content("~/images/no_image_available.svg")" alt="@p.Name" />
                            }

                        </a>
                    </div>
                    <div class="product-info">
                        <h5>Product Name:@p.Name</h5>
                        <h4>Product Price:@p.Price.ToString("0.00")</h4>
                        <h4>Product Category ID:@p.CategoryID //This is for devs</h4>
                        <h4>Product Quantity:@p.Quantity</h4>
                    </div>
                    <div class="fl-left">
                        <a class="text-center" href="@Url.Action("EditProduct", "Products", new { id = p.Id })"><span><button type="button" class="btn">Edit</button></span></a>
                    </div>
                </div>

            }

        </section>
    }
    else
    {
        <section class="products">
            @foreach (Product p in Model)
            {
                <div class="product-card">
                    <div class="product-image">
                        <a href="@Url.Action("Detail", "Products", new { id=p.Id})">
                            @if (!String.IsNullOrEmpty(p.ImageName1))
                            {
                                <img src="@Url.Content("~/images/"+p.ImageName1)" alt="@p.ImageName1" />

                            }
                            else
                            {
                                <img src="@Url.Content("~/images/no_image_available.svg")" alt="@p.Name" />
                            }

                        </a>
                    </div>
                    <div class="product-info">
                        <h5>Product Name:@p.Name</h5>
                        <h4>Product Price:@p.Price.ToString("0.00")</h4>
                        <h4>Product Category ID:@p.CategoryID //This is for devs</h4>
                        <h4>Product Quantity:@p.Quantity</h4>
                    </div>
                </div>
            }

        </section>

    }
}