@using FurnitureSale.Models;
@model List<Product>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@
<h2>&nbsp;</h2>

@if (Model.Count == 0) 
{
    <p>No product have been added yet</p>
}
else
{
    if (Session["UserName"] == "Admin")
    {
        <section class="products">
            @foreach (Product p in Model)
            {
            <div class="product-card">
                <div class="product-image">
                    <a href="@Url.Action("Detail", "Products", new { id=p.Id})">
                        @if (!String.IsNullOrEmpty(p.ImageName1))
                        {
                            <img src="@Url.Content("~/images/"+p.ImageName1)" alt="@p.ImageName1" />

                        }
                        else
                        {
                            <img src="@Url.Content("~/images/no_image_available.svg")" alt="@p.Name" />
                        }

                    </a>
                </div>
                <div class="product-info">
                    <h5>Name:@p.Name</h5>
                    <h5>Price:@p.Price.ToString("0.00")</h5>
                    <h5>Category:
                    @if (p.CategoryID == 1)
                    {
                        <span>LivingRoom</span>
                    }
                    else if (p.CategoryID == 2)
                    {
                        <span>BedRoom</span>
                    }
                    else if (p.CategoryID == 3)
                    {
                        <span>Dining Room</span>
                    }
                    else if (p.CategoryID == 4)
                    {
                        <span>Kitchen</span>
                    }
                    else
                    {
                        <span>Babies & Kids</span>
                    }</h5>
                    <h5>Quantity:@p.Quantity</h5>
                    <h5><a href="@Url.Action("EditProduct", "Products", new { id = p.Id })"><button type="button" class="btn">Edit</button></a></h5>
                </div>
            </div>

            }

        </section>
    }
    else
    {
        <section class="products">
            @foreach (Product p in Model)
            {
                <div class="product-card">
                    <div class="product-image">
                        <a href="@Url.Action("Detail", "Products", new { id=p.Id})">
                            @if (!String.IsNullOrEmpty(p.ImageName1))
                            {
                                <img src="@Url.Content("~/images/"+p.ImageName1)" alt="@p.ImageName1" />

                            }
                            else
                            {
                                <img src="@Url.Content("~/images/no_image_available.svg")" alt="@p.Name" />
                            }

                        </a>
                    </div>
                    <div class="product-info">
                        <h5>Name:@p.Name</h5>
                        <h5>Price:@p.Price.ToString("0.00")</h5>
                        <h5>Category: 
                        @if (p.CategoryID == 1)
                        {
                            <span>LivingRoom</span>
                        }
                        else if (p.CategoryID == 2)
                        {
                            <span>BedRoom</span>
                        }
                        else if (p.CategoryID == 3)
                        {
                            <span>Dining Room</span>
                        }else if(p.CategoryID == 4)
                        {
                            <span>Kitchen</span>
                        }
                        else
                        {
                            <span>Babies & Kids</span>
                        }
                        </h5>
                        <h5>Quantity:@p.Quantity</h5>
                    </div>
                </div>
            }

        </section>

    }






}

