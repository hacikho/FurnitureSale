@using FurnitureSale.Models;
@model Product

@{
    ViewBag.Title = "NewProduct";
}

<h2>NewProduct</h2>

<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "enter name of the product" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextAreaFor(m => m.Price, new { @class = "form-control", paceholder = "enter the price" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "8" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryID)
        @Html.TextBoxFor(m => m.CategoryID, new { @class = "form-control", placeholder = "enter category id" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ImageName1)
        <input type="file" name="productImage" class="form-control-file" accept=".png, .jpg" />
        @Html.LabelFor(m => m.ImageName2)
        <input type="file" name="productImage2" class="form-control-file" accept=".png, .jpg" />
        @Html.LabelFor(m => m.ImageName3)
        <input type="file" name="productImage3" class="form-control-file" accept=".png, .jpg" />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Quantity)
        @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", placeholder = "enter quantity" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ActiveListing)
        @Html.TextBoxFor(m => m.ActiveListing, new { @class = "form-control", placeholder = "enter Yes or No" })
    </div>

    

    <input type="submit" value="Save" name="action:NewProduct" />

</form>
